       import matplotlib.pyplot as plt
       x = np.arange(0, 10, 0.1)
       y = x**2
       fig = plt.figure(figsize = (6,6))
plt.scatter(y, x,s = 10,marker ='o',edgecolor="red", alpha =1 )
