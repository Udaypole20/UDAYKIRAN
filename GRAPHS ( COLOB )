x = np.arange(0, 10, 0.1)
y = np.sin(x)
z= np.cos(x)
fig=plt.figure(figsize=(5,5))
plt.plot(y,y,color="red")
plt.plot(y,z,color="green")
plt.show()
 
 pie chart
 
 gases={"Nitrogen":49.4,"Oxygen":24.95,"Argon":2.93,"carbondioxide":3.1,"Othergases":10.46}
 
 percentages=list(gases.values())
 categories=list(gases.keys())
 from matplotlib.patches import Shadow
fig=plt.figure(figsize=(10,10))
plt.pie(x=percentage,labels=categories
,colors=["red","green","pink","black","blue"],explode=[0,0.1,0.2,0,0],shadow=True)
print(len(x))
plt.title(" Gases Pie chart")
plt.legend=(["Nitogen","Oxygen","Argon","carbondioxide","Othergases"])
plt.show()

fig=plt.figure(figsize=(5,5))
plt.bar(x=categories,height=percentage
,color=["red","green","pink","white","blue"]
,edgecolor="black")
plt.xlabel("categories")
plt.ylabel("percentage")
plt.title("BAR GRAPH")
plt.show()

fig=plt.figure(figsize=(5,5))
plt.barh(y=categories,width=percentage
,color=["red","green","pink","white","blue"]
,edgecolor="black")
plt.xlabel("categories")
plt.ylabel("percentage")
plt.title("BAR GRAPH")
plt.show()

